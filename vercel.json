{
  "build": {
    "env": {
      "HUGO_VERSION": "0.100.2"
    }
  },
  "builds": [
    { "src": "*", "use": "hugo --enableGitInfo" }
  ]
  "github": {
    "silent": true
  },
    "headers": [
      {
        "source": "/(.*)",
        "headers" : [
          {
            "key" : "X-Content-Type-Options",
            "value" : "nosniff"
          }
        ]
      }
    ]
}